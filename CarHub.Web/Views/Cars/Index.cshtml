@model CarOverviewModel
@{
    ViewData["Title"] = "Index";
}

<h1 class="pagetitle">Overview</h1>
<h5 style="margin-bottom: 60px;">Find your dream car</h5>

<div class="row">
    <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
        <li class="nav-item">
            <a class="nav-link overview-nav-pills active" id="pills-forsale-tab" data-toggle="pill" href="#pills-forsale" role="tab"
               aria-controls="pills-forsale" aria-selected="true">For Sale</a>
        </li>
        <li class="nav-item">
            <a class="nav-link overview-nav-pills" id="pills-showcase-tab" data-toggle="pill" href="#pills-showcase" role="tab"
               aria-controls="pills-showcase" aria-selected="false">Showcase</a>
        </li>
        <li class="nav-item">
            <a class="nav-link overview-nav-pills" id="pills-recentlysold-tab" data-toggle="pill" href="#pills-recentlysold" role="tab"
               aria-controls="pills-recentlysold" aria-selected="false">Recently Sold</a>
        </li>
    </ul>
    <div class="tab-content pt-2 pl-1" id="pills-tabContent">
        <div class="tab-pane fade show active" id="pills-forsale" role="tabpanel" aria-labelledby="pills-forsale-tab">
            @await  Html.PartialAsync("_CarOverviewCards", Model.CarsForSale)
        </div>
        <div class="tab-pane fade" id="pills-showcase" role="tabpanel" aria-labelledby="pills-showcase-tab">
            @await Html.PartialAsync("_CarOverviewCards", Model.CarsShowcase)
        </div>
        <div class="tab-pane fade" id="pills-recentlysold" role="tabpanel" aria-labelledby="pills-recentlysold-tab">
            @await Html.PartialAsync("_CarOverviewCards", Model.CarsRecentlySold)
        </div>
    </div>
</div> 